@model IEnumerable<CarsAndDrivers.ViewModels.Home.CarProfileViewModel>

<div class="panel panel-default text-center">
    <div class="panel-heading">
        <h4 class="intro-text">Top 3 Car Posts of the Week | <small> Determined by Fame Points </small></h4>
    </div>
    <div class="panel-body">
        <div class="row text-center">
            @foreach (var car in Model)
            {
                <div class="col-md-4 col-sm-4 hero-feature">
                    @Html.DisplayFor(model => car)
                </div>
            }
        </div>
    </div>
</div>