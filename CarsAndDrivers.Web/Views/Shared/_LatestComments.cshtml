@model IList<CarsAndDrivers.ViewModels.Home.CommentsViewModel>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="intro-text">Latest Comments</h4>
    </div>
    <div class="panel-body">
        @if (Model.Count() > 0)
        {
            foreach (var comment in Model)
            {
                <div class="media">
                    <a class="media-left" href="@Html.DisplayFor(model => comment.SenderAvatarUrl)">
                        <img class="img-rounded" src="@Html.DisplayFor(model => comment.SenderAvatarUrl)" />
                    </a>
                    <div class="media-body">
                        <h6 class="media-heading"><span class="label label-danger normal">@Html.DisplayFor(model => comment.SenderUserName)</span><span class="text-muted"> @Html.DisplayFor(model => comment.CreatedOn)</span></h6>
                        <p>@Html.DisplayFor(model => comment.Text)</p>
                    </div>
                </div>
            }
        }
    </div>
</div>