@using Microsoft.AspNet.Identity

<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top border-bottom" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">
                    <i class="fa fa-car"></i>  <span class="light">Cars</span> and Drivers
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#about">Posts</a></li>
                    <li><a href="#contact">Cars</a></li>
                    <li><a href="#contact">Drivers</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <span class="caret text-success"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Top Cars</a></li>
                            <li><a href="#">Top Drivers</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Search</a></li>
                            <li><a href="#">News</a></li>
                            <li><a href="#">Premium Account</a></li>
                            <li><a href="#">Help</a></li>
                            <li><a href="#">Blog</a></li>
                        </ul>
                    </li>
                </ul>

                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown active">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img class="img-rounded" src="~/images/avatar.png" />
                                <span class="caret text-success"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="@Url.Action("Manage", "Account", routeValues: null)" title="Manage">
                                        @{
                                            var spanClass = string.Empty;
                                            if (User.IsInRole("Admin"))
                                            {
                                                spanClass = "label-danger";
                                            }
                                            else
                                            {
                                                spanClass = "label-success";
                                            }
                                            <span class="label @spanClass normal">
                                                @User.Identity.GetUserName()
                                            </span>
                                        }
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li><a href="#"> <i class="fa fa-car"></i> Post new Car</a></li>
                                <li class="divider"></li>
                                <li class="dropdown-header">Avatar and Profile picture</li>
                                <li><a href="#">Change Avatar</a></li>
                                <li><a href="#">Change Profile picture</a></li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#">Messages <span class="label label-success normal">12</span></a>
                                </li>
                                <li>
                                    <a href="#">Notifications <span class="label label-success normal">35</span></a>
                                </li>
                                <li><a href="#">Friends</a></li>
                                <li><a href="#">Black List</a></li>
                                <li><a href="#">Settings</a></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Exit</a></li>
                            </ul>
                        </li>
                    </ul>
                }
            </div><!--/.nav-collapse -->
        </div>
    </nav>
</header>
